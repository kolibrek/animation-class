---
import HoverTilt from "../components/HoverTilt.astro"
import NavBar from "../components/NavBar.astro"
import RainbowBorder from "../components/RainbowBorder.astro"
import RippleButton from "../components/RippleButton.astro"
import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout title="Button Transitions">
  <div class="grid place-items-center h-screen content-center bg-dark text-light gap-8">
    <header class="grid gap-8">
      <NavBar/>
      <h1 class="text-4xl text-lime">Button Transitions</h1>
    </header>
    <div class="flex gap-8 font-700">
      <RippleButton color1="#34d399" color2="#a7f3d0">
        <a href="#" class="btn grid px-4 py-4 rounded">Button 1</a>
      </RippleButton>
      <HoverTilt tiltFactor="1.3" scaleFactor="1.3">
        <a href="#" class="grid bg-purple-6 active:bg-purple-8 px-4 py-4 rounded font-700 text-center uppercase">
          <span class="z-10">Button 2</span>
        </a>
      </HoverTilt>
      <RainbowBorder borderColor1="#f43f5e" borderColor2="#fff">
        <a href="#" class="grid place-items-center btn bg-rose-5 active:bg-rose-6 px-4 py-4 rounded">
          Button 3
        </a>
      </RainbowBorder>
    </div>
  </div>
</BaseLayout>
---
import HoverTilt from "../component/HoverTilt.astro"
import RainbowBorder from "../component/RainbowBorder.astro"
import RippleButton from "../component/RippleButton.astro"
import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout title="Button Transitions">
  <div class="grid place-items-center h-screen content-center bg-dark text-light gap-8">
    <h1 class="text-4xl text-lime">Button Transitions</h1>
    <div class="grid grid-cols-3 gap-8 font-700">
      <RippleButton>Button 1</RippleButton>
      <HoverTilt tiltFactor="1.3" scaleFactor="1.3">
        <a href="#" class="grid bg-purple-6 active:bg-purple-8 px-4 py-4 rounded font-700 text-center uppercase">
          <span class="z-10">Button 2</span>
        </a>
      </HoverTilt>
      <RainbowBorder borderColor1="#9f1239" borderColor2="#fff">
        <a href="#" class="grid bg-rose-6 active:bg-rose-8 px-4 py-4 rounded font-700 uppercase">
          Button 3
        </a>
      </RainbowBorder>
    </div>
  </div>
</BaseLayout>